{
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "globals": {
    "Transifex": true
  },
  "extends": "vizzuality",
  "rules": {
    "class-methods-use-this": 0,
    "import/prefer-default-export": 0,
    "import/extensions": 0,
    "import/no-extraneous-dependencies": 0,
    "import/no-unresolved": 0,
    "import/named": 0,
    "react/jsx-filename-extension": 0,
    "linebreak-style": 0,
    "no-plusplus": 0,
    "jsx-a11y/href-no-hash": 0
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "babel"
  ],
  "settings": {
    "import/resolver": {
      "babel-module": {
      }
    }
  }
}
