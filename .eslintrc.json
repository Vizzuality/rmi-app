{
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "globals": {
    "Transifex": true
  },
  "extends": "vizzuality",
  "rules": {
    "import/prefer-default-export": 0,
    "react/jsx-filename-extension": 0,
    "no-plusplus": 0,
    "jsx-a11y/href-no-hash": 0,
    "react/prefer-stateless-function": [true,
      { "ignorePureComponents": true }
    ]
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "babel"
  ],
  "settings": {
    "import/resolver": {
      "babel-module": {
      }
    }
  }
}
